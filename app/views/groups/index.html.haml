.index-main
  .main-conteiner
    .header-content
      .header-content__title DogOFF
      .header-content__left
        = link_to '/groups/1/search' do
          近くのお友達を探す
      .header-content__right
        = link_to 'groups/new' do
          グループを探す
    .header-registration
      - if user_signed_in?
        %h4
          メールアドレス： #{current_user.email}
        = link_to "ログアウト", destroy_user_session_path, method: :delete
      - else
        %h2 現在ログインしていません
        = link_to "ログイン", new_user_session_path, class: 'header-registration__left'
        = link_to "新規登録", new_user_registration_path, class: 'header-registration__right'
  .main-top
    .main-top__image
      = image_tag "http://www.worldfolksong.com/songbook/animal/img/cute_dogs01.jpg"
      %p もっと豊かな生活に
    .main-top__bottom
      .main-top__bottom__menu 探す
      .main-top__bottom__content
        .main-top__bottom__content__prefecture 都道府県
        .main-top__bottom__content__city 市町村
        %input.main-top__bottom__content__dog{type: "text",placeholder: '犬種'} 
        .main-top__bottom__content__btn
          = link_to '検索',root_path
  .main-middle
    .main-middle__title ワンちゃんの友達が見つかる
    .main-middle__content 説明です説明です説明です
    .main-middle__image 画像
  .main-bottom
    .main-bottom__title 登録方法
    .main-bottom__roguin メールアドレス
    .main-bottom__address 住所
    .main-bottom__owner 飼い主
    .main-bottom__dog ワンちゃん
  .main-footer
    .main-footer 仮
